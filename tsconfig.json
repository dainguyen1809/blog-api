{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@dtos/*": ["src/dtos/*"],
      "@dtos": ["src/dtos"],
      "@entities/*": ["src/entities/*"],
      "@entities": ["src/entities"],
      "@modules/*": ["src/modules/*"],
      "@modules": ["src/modules"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"]
    }
  },
  "include": ["src"]
}
